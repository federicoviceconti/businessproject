<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/darker_gray"
    android:orientation="vertical">

    <!-- CONTAINER -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="12dp">

        <!-- RELATIVE 1 -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/background_light"
            android:padding="4dp">

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:text="@string/title"
                android:textColor="@android:color/holo_blue_dark"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@id/title"
                android:text="@string/subtitle"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/abstract_text"
                android:layout_alignParentEnd="true"
                android:layout_toStartOf="@id/subtitle"
                android:text="@string/date" />

            <TextView
                android:id="@+id/abstract_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@id/date"
                android:layout_below="@id/subtitle"
                android:layout_marginTop="5dp"
                android:text="@string/center_text"
                android:textAlignment="textEnd" />

            <TextView
                android:id="@+id/t_geo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/abstract_text" />

            <TextView
                android:id="@+id/t_call"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/abstract_text"
                android:layout_toEndOf="@id/t_geo" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@id/date"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/abstract_text"
                android:text="@string/read_text" />

        </RelativeLayout>

    </LinearLayout>

</ScrollView>